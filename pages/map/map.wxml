<view class="container">
    <image src='/image/inv.png' class='inv'></image>
    <image src='{{image8}}' class='cover' mode='aspectFill' style="width: {{imagewidth}}px; height: {{imageheight}}px;" bindload="imageLoad"></image>
    <view class='datetime' animation="{{animationData}}">
        <view class='box'>
            <view class="name css13610f7ae66601">
                <span class="fl">{{bridegroomname}}</span>
                <span class="and">&</span>
                <span class="fr ">{{bridename}}</span>
            </view>
            <view class="date css13610f7ae66601">
                <view>谨定于 {{date_yang}}</view>
                <view>农历 {{date_nong}} 举办婚礼</view>
                <view bindtap="markertap" class='free-horizontalScroll'>
                  <view class="free-verticalScroll-item">地址：{{marry_addr}}</view>
                  <view class="free-verticalScroll-item">(点击导航)</view>
                </view>
                <view>恭请您的光临</view>
            </view>
        </view>
    </view>
</view>
